                      android:layout_marginTop="5dp"
                      android:layout_toRightOf="@id/imageView"
                      android:text="INR 56990"
                      android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"


                      -->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
